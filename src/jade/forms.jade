                  option(value='SK') Saskatchewan
                  option(value='YT') Yukon Territory
              .one.fourth.padded
                input(type='text', placeholder='Zip Code')
            .row
              .one.whole.padded
                label(for='message') Special Instructions
                textarea#message(placeholder='Enter your message...')
            .row
              .one.whole.padded
                label(for='twitter') Twitter
                .row
                  .one.half.pad-right
                    .row
                      .one.mobile.sixth
                        span.prefix @
                      .five.mobile.sixths
                        input(type='text', name='twitter', placeholder='username')
                  .one.half.pad-left
                    .row
                      .three.mobile.fifths
                        input(type='text', name='sidereel', placeholder='pick username')
                      .two.mobile.fifths
                        span.suffix @example.com
            .row
              .one.whole.padded
                label(for='things') Pick a thing:
                ul.radio-list
                  li
                    input#things1(type='radio', name='things', checked='checked')
                    label.inline(for='things1') Thing one
                  li
                    input#things2(type='radio', name='things')
                    label.inline(for='things2') Thing two
            .row
              .one.whole.padded
                button(type='button') Submit
                button.warning(type='button') Cancel
            .row
              .one.whole.padded
                input#things3(type='checkbox', name='allthings', checked='checked')
                label.inline(for='things3') I want all the things!
        hr
        h2 Field States
        .row
          .one.whole.padded
            p.invalid
              label Invalid entry field label
              input(value='Invalid entry')
            .invalid.row
              .one.mobile.tenth
                span.prefix @
              .nine.mobile.tenths
                input(value='Invalid entry')
        .row
          .one.whole.padded
            p.valid
              label Valid entry field label
              input(value='Valid entry')
            .valid.row
              .one.mobile.tenth
                span.prefix @
              .nine.mobile.tenths
                input(value='Valid entry')
        .row
          .one.whole.padded
            p.disabled
              label Disabled field label
              input(value='Disabled field')
            .disabled.row
              .one.mobile.tenth
                span.prefix @
              .nine.mobile.tenths
                input(value='Disabled field')
        hr
        h2 Next Up: Tiles
        p
